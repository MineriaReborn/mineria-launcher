{
  "name": "mineria-launcher",
  "productname": "Mineria - Launcher",
  "version": "1.1.2",
  "description": "",
  "main": "dist/app.js",
  "author": "Mineria",
  "engines": {
    "node": "22.x.x"
  },
  "scripts": {
    "start": "npm run build && cross-env-shell NODE_ENV=dev electron .",
    "build": "npm run rm && tsc && npm run copy-files",
    "rm": "rimraf ./dist && rimraf ./launcher",
    "copy-files": "copyfiles \"src/**/*.html\" \"src/**/*.css\" \"src/**/*.ttf\" \"src/**/*.woff2\" \"src/**/*.png\" \"src/**/*.icns\" \"src/**/*.ico\" -u 1 dist/",
    "release": "cross-env-shell NODE_ENV=production \"npm run build && electron-builder\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "license": "CC0",
  "nodemonConfig": {
    "ext": "js,html,css"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.9",
    "electron-updater": "^6.6.2",
    "node-7z": "^3.0.0",
    "prompt": "^1.2.1",
    "tar": "^7.4.3",
    "tslib": "^2.4.1",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.15.17",
    "@types/node-7z": "^2.1.8",
    "@types/semver": "^7.7.0",
    "@types/unzipper": "^0.10.11",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "fr.unknown.mineria",
    "productName": "Mineria Launcher",
    "artifactName": "${productName}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "package.json",
      "LICENSE.md"
    ],
    "compression": "maximum",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "./dist/assets/images/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "icon": "./dist/assets/images/icon.icns",
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./dist/assets/images/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "launcher"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MineriaReborn/mineria-launcher.git"
  }
}
